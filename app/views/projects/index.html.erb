<% title "Projects" %>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Tags</th>
    <th>Icon Url</th>
    <th>Active</th>
    <th>User</th>
  </tr>
  <% for project in @projects %>
    <tr>
      <td><font color='<%= project.color %>'><%= project.title %></td>
      <td class='user'><%= project.user.username %></td>
      <td><%= project.tags %></td>
      <td><%= project.icon_url %></td>
      <td><%= project.active %></td>
      <td><%= link_to "Show", project %></td>
      <td><%= link_to "Edit", edit_project_path(project) %></td>
      <td><%= link_to "Destroy", project, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Project", new_project_path %></p>
